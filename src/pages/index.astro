---
import SectionLayout from '@layouts/SectionLayout.astro';
---

<style>
  .content {
    max-width: var(--content-width);
    margin: auto;
  }

  .links {
    & > a {
      display: block;
      &:nth-child(4n + 1) {
        color: var(--color1);
      }

      &:nth-child(4n + 2) {
        color: var(--color2);
      }

      &:nth-child(4n + 3) {
        color: var(--color3);
      }

      &:nth-child(4n + 4) {
        color: var(--color4);
      }
    }
  }
</style>

<SectionLayout>
  <div class="content">
    <h1>Mah Site!</h1>
    <p>
      Welcome to my personal site. This is just a silly home page. Check out my
      sites below!
    </p>

    <div class="links">
      <a href="/blog">Blog</a>
      <a href="/lessons">Lessons</a>
    </div>
  </div>
</SectionLayout>
