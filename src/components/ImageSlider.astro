---
import BlogImage from './BlogImage.astro';
import SolidSlider from './SolidSlider';

export type Props = {
  title: string;
  images: Array<{
    src: string;
    alt: string;
    caption?: string;
  }>;
};

const { images = [], title } = Astro.props as Props;
const test = 5;
---

<!-- TODO - create a map of BlogImage and pass these into a solidjs slider component -->
<div id="image-slider">
  <h3 class="title">{title}</h3>
  <SolidSlider>
    <!-- This doesn't seem to work. We probably need to 
      wrap BlogImage inside of SolidImage. Easier to handle
      single child element
    -->
    {images.map((image) => <BlogImage {...image} />)}
  </SolidSlider>
</div>

<style>
  .title {
    text-align: center;
    margin: 2em auto;
  }
</style>

<script define:vars={{ test }} src="./imageSlider"></script>
