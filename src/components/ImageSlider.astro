---
import BaseImage from './BaseImage.astro';
import Fragment from './Fragment';
import SliderImage from './SliderImage';
import SolidSlider from './SolidSlider';

export type Props = {
  title: string;
  images: Array<{
    src: string;
    alt: string;
    caption?: string;
  }>;
};

const { images = [], title } = Astro.props as Props;
---

<div id="image-slider"></div>

<style>
  .title {
    text-align: center;
    margin: 2em auto;
  }
</style>
