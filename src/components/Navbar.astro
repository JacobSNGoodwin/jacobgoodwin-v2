---
import logo from '@assets/icon-512px.png';
---

<style lang="postcss">
  .nav-container {
    display: flex;
    justify-content: space-between;
    padding: 0 2rem;
    height: 62px;
    align-items: center;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, .1);
  }

  .nav-logo {
    cursor: pointer;
    height: 42px;

    &>img {
      max-height: 100%;
      max-width: auto;
    }
  }

  .nav-items {
    overflow-x: scroll;
    display: flex;

    &>div {
      padding: 0 1rem;
      cursor: pointer;
      font-size: 1.25rem;
    }

    &:last-child {
      padding-right: 0;
    }
  }
</style>

<div class="nav-container">
  <div class="nav-logo">
    <img src={logo} alt="App Logo">
  </div>
  <div class="nav-items">
    <div>Item 1</div>
    <div>Item 2</div>
    <div>Item 3</div>
  </div>
</div>