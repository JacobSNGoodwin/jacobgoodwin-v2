---
import type { PostFrontmatter } from '@src/types';
import type { MDXInstance } from 'astro';
import { format } from 'date-fns';

export type Props = {
  post: MDXInstance<PostFrontmatter>;
};

const { post } = Astro.props;

const postDate = new Date(post?.frontmatter?.date);
const formattedDate = format(postDate, 'LLLL do, yyyy');
---

<a href={post.url} class="post-card">
  <h2 class="post-card-title">
    {post.frontmatter.title}
  </h2>
  <div class="post-card-date">
    {formattedDate}
  </div>
  {
    post?.frontmatter?.description && (
      <p class="post-card-description">{post.frontmatter.description}</p>
    )
  }
</a>

<style>
  .post-card {
    display: block;
    margin: 1.5em auto;
    color: var(--headerColor);
    &:hover {
      opacity: 1;
    }
    padding: 0 1em;
  }

  .post-card::after {
    content: '';
    display: block;
    position: absolute;
    padding-top: 0.5em;
    width: 50%;
    left: 25%;
    border-bottom: 0.5px solid var(--color2);
  }

  .post-card-title {
    text-align: center;
    margin-bottom: 0.2em;
  }

  .post-card-date {
    text-align: center;
    color: var(--color1);
  }

  .post-card-description {
    font-color: var(--bodyColor);
    margin-top: 0;
    margin-bottom: 0;
    font-size: 0.8em;
    text-align: center;
    font-family: 'Lato', sans-serif;
    font-weight: 400;
    font-style: italic;
  }
</style>
