---
import { MarkdownContentFields, MetaTags } from "src/types";
import BlogLayout from "./BlogLayout.astro";
import PostLayout from "./PostLayout.astro";

export type Props = {
  content: MarkdownContentFields;
};

const { content } = Astro.props as Props;

const metaTags: Partial<MetaTags> = {
  title: content.title,
  description: content.description,
  author: (content?.authors ?? []).join(','),
  image: content.imageUrl,
  keywords: content?.keywords ?? [],
};
---

<BlogLayout metaTags={metaTags}>
  <PostLayout content={content}>
    <slot />
  </PostLayout>
</BlogLayout>