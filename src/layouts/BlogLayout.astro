---
export type Props = {
  metaTags?: MetaTags;
};

import { baseMetaTags } from "@data/default-tags";
import { MetaTags } from "src/types";
import SectionLayout from "./SectionLayout.astro";

const items = [
  {
    title: 'About',
    path: '/blog/about',
  },
  {
    title: 'Travel',
    path: '/blog/travel',
  },
  {
    title: 'Outings',
    path: '/blog/outings',
  },
  {
    title: 'Beliefs',
    path: '/blog/beliefs',
  },
];

const { metaTags } = Astro.props as Props;

const tags: MetaTags = {
  ...baseMetaTags,
  title: 'JG - Blog',
  author: 'Jacob Goodwin',
  description: 'Jacob Goodwin\'s writings on just about whatever he feels like',
  ...metaTags,
}
---

<SectionLayout navItems={items} logoPath="/blog" metaTags={tags}>
  <slot />
</SectionLayout>