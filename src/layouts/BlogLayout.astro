---
export type Props = {
  metaTags?: MetaTags;
};

import { baseMetaTags } from "@data/baseMetaTags";
import { MetaTags } from "src/types";
import SectionLayout from "./SectionLayout.astro";
import { blogTags } from "@data/tags";

const items = [
  {
    title: 'About',
    path: '/blog/about',
  },
  ...blogTags.map(tag => ({
    title: tag.title,
    path: `/blog/tags/${tag.name}`
  })),
];

const { metaTags } = Astro.props as Props;

const tags: MetaTags = {
  ...baseMetaTags,
  title: 'JG - Blog',
  author: 'Jacob Goodwin',
  description: 'Jacob Goodwin\'s writings on just about whatever he feels like',
  ...metaTags,
}
---

<SectionLayout navItems={items} logoPath="/blog" metaTags={tags}>
  <slot />
</SectionLayout>