---
import SectionLayout from "./SectionLayout.astro";

const items = [
  {
    title: 'About',
    path: '/blog/about',
  },
  {
    title: 'Travel',
    path: '/blog/travel',
  },
  {
    title: 'Outings',
    path: '/blog/outings',
  },
  {
    title: 'Beliefs',
    path: '/blog/beliefs',
  },
];

const { title } = Astro.props
---

<SectionLayout navItems={items} logoPath="/blog" title={title || 'JG Blog' }>
  <slot />
</SectionLayout>